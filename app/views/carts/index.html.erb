<p id="notice"><%= notice %></p>

<h1>Listing Carts</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Amount</th>
      <th>Quantity</th>
      <th>User</th>
      <th>Vegetable</th>
      <th>Fruit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.item %></td>
        <td><%= cart.amount %></td>
        <td><%= cart.quantity %></td>
        <td><%= cart.user %></td>
        <td><%= cart.vegetable %></td>
        <td><%= cart.fruit %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

