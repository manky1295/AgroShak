<h1> USER PROFILE </h1>
<h2>Hello <%= @user.email.split("@").first.capitalize%> !</h2>


<% @curr_orders.each do |order| %>
	<%total =0%>
	<%total_quantity=0%>
	
	<section class="orderplaced">
		<div class="details">
			Name : <%= order.Buyername %><br>
			Number : <%= order.Buyernumber %><br>
			Address : <%= order.Buyeraddress %><br> <br>
			Ordered at : <%= order.created_at.strftime("%H:%M----%d.%m.%Y")%><br>
		</div>
		<div class="finalitems">
			<table>
				<thead>
					<th>Item</th>
					<th>Quantity</th>
					<th>Amount</th>
					<th></th>
				</thead><tbody>
			<% @cartsitems.where(cart_id: order.cart_id).each do |item| %>
				<tr>
				        <td><%= item.item %></td><td><%= item.weight %><%= item.weightin %> X   <%=item.quantity %></td><td>Rs. <%= item.amount%></td>
				        <%total = total+item.amount %><% total_quantity = total_quantity + item.quantity%>
				    </tr>
				<%end%>
				</tbody>
				 <tfoot><tr class="beforeorder"><td></td><td class="beforeorder"><%=total_quantity%> Items</td><td class="beforeorder">Rs. <%=total%></td></tr></tfoot>
    		</table>
		</div>
	</section>>
	
<%end%>


